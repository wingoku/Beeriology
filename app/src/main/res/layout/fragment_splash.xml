<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_screen_animation_view_background"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:background="@color/splash_screen_animation_view_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/tv_splash_screen"
        tools:text="DUMMY TEXT"
        android:textColor="@color/splash_screen_text_color"
        android:textSize="@dimen/splash_screen_text_size"
        android:layout_marginTop="@dimen/margin_top_splash_screen_text"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animation_view"
        android:visibility="invisible"/>
</RelativeLayout>